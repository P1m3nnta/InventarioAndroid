<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.inventarioweb.empresa.inventarioandroid.View.app"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="150dp"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EdtCodigo"
            android:layout_weight="1"
            android:hint="Codigo"
            android:textSize="25dp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/barcode48"
            android:id="@+id/IBbarcode" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EdtDescripcion"
        android:layout_gravity="center_horizontal"
        android:hint="Descripcion"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EdtCantidad"
            android:layout_weight="1"
            android:hint="Cantidad"
            android:textSize="25dp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:id="@+id/BtnGuardar"
            android:layout_weight="1"
            android:background="@drawable/botonmenu2"
            android:drawableRight="@drawable/save48"
            android:gravity="center_vertical|right"
            android:textSize="25dp"
            android:textColor="#ffffff" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EdtUbicacion"
        android:layout_gravity="center_horizontal"
        android:hint="Ubicacion"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Abrir ubicacion"
        android:textOn="Cerrar ubicacion"
        android:id="@+id/BtnAbrirUbicacion"
        android:layout_gravity="center_horizontal"
        android:checked="false"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/door48"
        android:textColor="#ffffff"
        android:layout_above="@+id/BtnTerminar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:textSize="25dp"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminar"
        android:id="@+id/BtnTerminar"
        android:background="@drawable/botonmenu2"
        android:drawableRight="@drawable/check48"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:layout_weight="0.21"
        android:textColor="#ffffff" />

</LinearLayout>
