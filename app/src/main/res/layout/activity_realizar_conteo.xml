<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.inventarioweb.empresa.inventarioandroid.View.app"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EdtCodigo"
            android:layout_weight="1"
            android:hint="Codigo"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:singleLine="false" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/barcode48"
            android:id="@+id/IBbarcode" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EdtDescripcion"
        android:layout_gravity="center_horizontal"
        android:hint="Descripcion"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EdtCantidad"
            android:layout_weight="1"
            android:hint="Cantidad"
            android:phoneNumber="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:id="@+id/BtnGuardar"
            android:layout_weight="1"
            android:background="@drawable/botonmenu2"
            android:drawableRight="@drawable/save48"
            android:gravity="center_vertical|right"
            android:textColor="#ffffff" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EdtUbicacion"
        android:layout_gravity="center_horizontal"
        android:hint="Ubicacion"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terminar"
            android:id="@+id/BtnTerminar"
            android:layout_gravity="bottom|left"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/botonmenu2"
            android:drawableRight="@drawable/check48"
            android:textColor="#ffffff" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Abrir ubicacion"
            android:textOn="Cerrar ubicacion"
            android:id="@+id/BtnAbrirUbicacion"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/door48"
            android:textColor="#ffffff"
            android:layout_above="@+id/BtnTerminar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:textSize="15dp" />
    </RelativeLayout>

</LinearLayout>
